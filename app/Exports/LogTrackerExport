<?php

namespace App\Exports;

use App\Models\Sparetracker;
use Maatwebsite\Excel\Concerns\FromCollection;
use Maatwebsite\Excel\Concerns\WithHeadings;

class LogTrackerExport implements FromCollection, WithHeadings
{
    public function collection()
    {
        return Sparetracker::select([
            'sn',
            'nama_perangkat',
            'jenis',
            'type',
            'kondisi',
            'pengadaan_by',
            'lokasi_asal',
            'lokasi',
            'bulan_masuk',
            'tanggal_masuk',
            'status_penggunaan_sparepart',
            'lokasi_realtime',
            'kabupaten',
            'bulan_keluar',
            'tanggal_keluar',
            'layanan_ai',
            'keterangan'
        ])->get();
    }

    public function headings(): array
    {
        return [
            'sn',
            'nama_perangkat',
            'jenis',
            'type',
            'kondisi',
            'pengadaan_by',
            'lokasi_asal',
            'lokasi',
            'bulan_masuk',
            'tanggal_masuk',
            'status_penggunaan_sparepart',
            'lokasi_realtime',
            'kabupaten',
            'bulan_keluar',
            'tanggal_keluar',
            'layanan_ai',
            'keterangan'
        ];
    }
}
